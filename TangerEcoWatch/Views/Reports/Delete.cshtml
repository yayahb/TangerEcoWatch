@model TangerEcoWatch.Models.Report

@{
    ViewData["Title"] = "Delete";
}
<!-- Favicon -->
<link rel="icon" href="~/img/core-img/favicon.ico">

<!-- Core Stylesheet -->
<link rel="stylesheet" href="~/style.css">

<body>
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-circle"></div>
        <div class="preloader-img">
            <img src="~/img/core-img/leaf.png" alt="">
        </div>
    </div>

    <!-- ##### Breadcrumb Area Start ##### -->
    <div class="breadcrumb-area">
        <!-- Top Breadcrumb Area -->
        <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image:url('@Url.Content("~/img/bg-img/clean.jpg")');">
            <h2>DELETE REPORT</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Report</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Delete</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Report</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PhotoUrl)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PhotoUrl)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SubmissionDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SubmissionDate)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.UserId)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="ReportId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
     </div>
    <!-- ##### All Javascript Files ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="~/js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="~/js/active.js"></script>
</body>